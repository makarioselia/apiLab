@model List<EF_Core.Models.CartItem>

@{
    ViewData["Title"] = "Cart Items";
}

<h2 class="mb-4">Cart Items</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>

                <td>@item.SupPrice.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.SupPrice * item.Quantity).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
